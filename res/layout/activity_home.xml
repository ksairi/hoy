<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		style="@style/background_paper">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal">

		<fragment
				android:name="com.hoy.fragments.PromoImgFragment"
				android:id="@+id/promoImgFragment"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	</LinearLayout>

	<LinearLayout style="@style/fragment_wrapper">

		<fragment
				android:name="com.hoy.fragments.EventListFragment"
				android:id="@+id/event_list_fragment"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="fill_parent"/>
	</LinearLayout>

</LinearLayout>