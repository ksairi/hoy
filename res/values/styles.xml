<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="BigButtonTextStyle" parent="BasicButtonTextStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MediumButtonTextStyle" parent="BasicButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="SmallButtonTextStyle" parent="BasicButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TinyButtonTextStyle" parent="BasicButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">11dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MiniButtonTextStyle" parent="BasicButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="BasicMainMenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="HeaderMainMenuTextStyle" parent="BasicMainMenuTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BasicComponentStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">3dp</item>
    </style>

	<style name="HorizontalBasicComponentStyle">
	        <item name="android:layout_width">wrap_content</item>
	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:orientation">horizontal</item>
	        <item name="android:layout_margin">3dp</item>
	</style>

	<style name="HorizontalComponentStyle" parent="HorizontalBasicComponentStyle">
	        <item name="android:padding">5dp</item>
	</style>

    <style name="ComponentStyle" parent="BasicComponentStyle">
        <item name="android:padding">5dp</item>
    </style>

    <style name="ItemRowStyle" parent="BasicComponentStyle">
        <item name="android:padding">2dp</item>
    </style>

    <style name="TitleComponentStyle" parent="BasicComponentStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

	<style name="BoldLabelTextStyle" parent="LabelTextStyle">
	        <item name="android:textStyle">bold</item>
	</style>

	<style name="ValueTextStyle" parent="LabelTextStyle">
     	<item name="android:paddingLeft">10dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:text">@string/no_available</item>
	</style>



</resources>