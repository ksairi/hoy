<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		style="@style/background_paper">

 	<include layout="@layout/include_img_promo"/>

	<LinearLayout style="@style/fragment_wrapper">

		<fragment
				android:name="com.hoy.fragments.EventListFragment"
				android:id="@+id/event_list_fragment"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="fill_parent"/>

		<FrameLayout
				android:id="@+id/event_details_wrapper"
				android:layout_height="wrap_content"
				android:background="@drawable/left_border"
				android:layout_weight="1"
				android:layout_width="0dp"/>
	</LinearLayout>


</LinearLayout>